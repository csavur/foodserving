
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <Button
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignRight="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="37dp"
        android:text="@string/table3" 
        android:onClick="onClickedTable3"/>

    <Button
        android:id="@+id/button4"
  		android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:text="@string/table4"
        android:onClick="onClickedTable4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_above="@+id/button3"
        android:layout_marginLeft="48dp"
        android:layout_toRightOf="@+id/button1"
        android:text="@string/table2"
        android:onClick="onClickedTable2" />

    <Button
        android:id="@+id/button1"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="99dp"
        android:layout_marginTop="236dp"
        android:text="@string/table1"
        android:onClick="onClickedTable1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:text="Connect" 
        android:onClick="onClickedConnect"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@+id/button2"
        android:text="Setting"
        android:onClick="onClickedSetting" />
 
</RelativeLayout>